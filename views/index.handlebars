<h1>Burgers!</h1>

<div class = "row">
    <div class = "col-md-3">
        <h2>To Be Devoured...</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{burger_name}}
                    <button class = "devour" data-id = "{{id}}">Devour!</button>
                    <br>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class = "col-md-3"></div>

    <div class = "col-md-3">
        <h2>Devoured!</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{burger_name}} 
                    <br>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>